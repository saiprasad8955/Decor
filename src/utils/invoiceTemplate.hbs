<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Invoice</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        padding: 40px;
        color: #333;
        background-color: #fff;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid #333;
        padding-bottom: 10px;
        margin-bottom: 30px;
      }

      .logo {
        height: 70px;
      }

      h1 {
        font-size: 28px;
        margin: 0;
      }

      h2 {
        font-size: 20px;
        color: #444;
        margin-bottom: 10px;
        border-bottom: 1px solid #ccc;
        padding-bottom: 5px;
      }

      .section {
        margin-bottom: 30px;
      }

      .details, .totals {
        display: flex;
        justify-content: space-between;
        font-size: 14px;
      }

      .details div, .totals div {
        width: 48%;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
      }

      th {
        background-color: #f2f2f2;
        text-align: left;
      }

      th, td {
        border: 1px solid #ccc;
        padding: 10px;
      }

      tr:nth-child(even) {
        background-color: #fafafa;
      }

      .totals {
        font-size: 15px;
        margin-top: 20px;
      }

      .totals p {
        margin: 5px 0;
      }

      .final {
        font-weight: bold;
        font-size: 1.2rem;
        border-top: 2px solid #333;
        padding-top: 10px;
        margin-top: 10px;
        text-align: right;
      }

      .right-align {
        text-align: right;
      }

      .bold {
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <!-- Shop Header -->
    <div class="header">
      <img src="{{logoPath}}" alt="Logo" class="logo" />
      <h1>Vihan Car Decor</h1>
    </div>

    <div class="section">
      <h2>Invoice Details</h2>
      <div class="details">
        <div>
          <p><span class="bold">Invoice No:</span> {{invoiceNumber}}</p>
          <p><span class="bold">Customer:</span> {{customer}}</p>
          <p><span class="bold">Invoice Date:</span> {{invoiceDate}}</p>
          <p><span class="bold">Description:</span> {{description}}</p>
        </div>
        <div class="right-align">
          <p><span class="bold">Sales Person:</span> {{salesPerson}}</p>
          <p><span class="bold">Delivery Date:</span> {{deliveryDate}}</p>
        </div>
      </div>
    </div>

    <div class="section">
      <h2>Invoice Items</h2>
      <table>
        <thead>
          <tr>
            <th>Item</th>
            <th>Qty</th>
            <th>Rate</th>
            <th>Tax (%)</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          {{#each items}}
            <tr>
              <td>{{name}}</td>
              <td>{{quantity}}</td>
              <td>₹{{rate}}</td>
              <td>{{tax}}%</td>
              <td>₹{{total}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="totals">
      <div></div>
      <div class="right-align">
        <p><span class="bold">Subtotal:</span> ₹{{subtotal}}</p>
        <p><span class="bold">Discount:</span> ₹{{discount}}</p>
        <p class="final">Final Amount: ₹{{finalAmount}}</p>
      </div>
    </div>
  </body>
</html>
