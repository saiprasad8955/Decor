<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Invoice</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 40px;
        color: #000;
      }
      h1, h2 {
        margin: 0 0 10px;
      }
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
      }
      .logo {
        height: 80px;
      }
      .section {
        margin-bottom: 30px;
      }
      .details, .totals {
        display: flex;
        justify-content: space-between;
      }
      .details div, .totals div {
        width: 45%;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
      }
      table, th, td {
        border: 1px solid #ccc;
      }
      th, td {
        padding: 8px;
        text-align: left;
      }
      .final {
        font-weight: bold;
        font-size: 1.1rem;
        text-align: right;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <!-- Shop Header -->
    <div class="header">
      <img src="../../logo_single.png" alt="Logo" class="logo" />
      <h1>Vihan Car Decor</h1>
    </div>

    <div class="section">
      <h2>Invoice Details</h2>
      <div class="details">
        <div>
          <p><strong>Customer:</strong> {{customer}}</p>
          <p><strong>Invoice Date:</strong> {{invoiceDate}}</p>
          <p><strong>Description:</strong> {{description}}</p>
        </div>
        <div>
          <p><strong>Sales Person:</strong> {{salesPerson}}</p>
          <p><strong>Delivery Date:</strong> {{deliveryDate}}</p>
        </div>
      </div>
    </div>

    <div class="section">
      <h2>Invoice Items</h2>
      <table>
        <thead>
          <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Rate</th>
            <th>Tax (%)</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          {{#each items}}
            <tr>
              <td>{{name}}</td>
              <td>{{quantity}}</td>
              <td>₹{{rate}}</td>
              <td>{{tax}}%</td>
              <td>₹{{total}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="totals">
      <div></div>
      <div>
        <p><strong>Subtotal:</strong> ₹{{subtotal}}</p>
        <p><strong>Discount:</strong> ₹{{discount}}</p>
        <p class="final">Final Amount: ₹{{finalAmount}}</p>
      </div>
    </div>
  </body>
</html>
